# ============================================================================
# Dakkah CityOS Commerce Platform â€” Environment Variables
# ============================================================================
# Copy this file to .env and fill in the real values for your environment.
# NEVER commit the .env file with real secrets to version control.
# ============================================================================

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql://postgres:password@localhost:5432/medusadb
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_pg_password
PGDATABASE=medusadb

# --- Medusa Backend ---
MEDUSA_BACKEND_PORT=9000
MEDUSA_BACKEND_URL=http://localhost:9000
MEDUSA_ADMIN_PATH=/commerce/admin
SESSION_SECRET=your_session_secret_min_32_chars
NODE_ENV=development
LOG_LEVEL=info
APP_VERSION=1.0.0
SERVICE_NAME=dakkah-cityos

# --- CORS ---
STORE_CORS=http://localhost:5000,https://*.yourdomain.com
ADMIN_CORS=http://localhost:5000,http://localhost:9000,https://*.yourdomain.com
AUTH_CORS=http://localhost:5000,http://localhost:9000,https://*.yourdomain.com

# --- Storefront ---
STOREFRONT_PORT=5000
STOREFRONT_URL=http://localhost:5000
VITE_MEDUSA_BACKEND_URL=http://localhost:9000
VITE_MEDUSA_PUBLISHABLE_KEY=pk_your_medusa_publishable_key
VITE_BACKEND_URL=http://localhost:9000
VITE_STOREFRONT_URL=http://localhost:5000
VITE_DEFAULT_COUNTRY=sa
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# --- Replit Object Storage ---
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id
PUBLIC_OBJECT_SEARCH_PATHS=media/
PRIVATE_OBJECT_DIR=private/

# --- Stripe ---
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
ENABLE_STRIPE_CONNECT=true

# --- SendGrid (Email) ---
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM=noreply@yourdomain.com
NOREPLY_EMAIL=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ADMIN_NOTIFICATIONS=true

# --- Temporal Cloud (Workflow Orchestration) ---
TEMPORAL_ENDPOINT=your-region.aws.api.temporal.io:7233
TEMPORAL_NAMESPACE=your-namespace.your-account
TEMPORAL_API_KEY=your_temporal_api_key

# --- Payload CMS ---
PAYLOAD_CMS_URL=http://localhost:3001
PAYLOAD_CMS_URL_DEV=https://your-payload-cms-instance.dev
PAYLOAD_API_KEY=your_payload_api_key
PAYLOAD_CMS_WEBHOOK_SECRET=your_payload_webhook_secret
PAYLOAD_WEBHOOK_SECRET=your_payload_webhook_secret

# --- ERPNext ---
ERPNEXT_URL_DEV=https://your-erpnext-instance.dev:8080
ERPNEXT_API_KEY=your_erpnext_api_key
ERPNEXT_API_SECRET=your_erpnext_api_secret
ERPNEXT_WEBHOOK_SECRET=your_erpnext_webhook_secret

# --- Fleetbase (Geo & Logistics) ---
FLEETBASE_URL_DEV=https://your-fleetbase-instance.dev:8000
FLEETBASE_API_KEY=your_fleetbase_api_key
FLEETBASE_ORG_ID=your_fleetbase_org_id
FLEETBASE_WEBHOOK_SECRET=your_fleetbase_webhook_secret

# --- Walt.id (Decentralized Identity) ---
WALTID_URL_DEV=https://your-waltid-instance.dev:7000
WALTID_API_KEY=your_waltid_api_key
WALTID_ISSUER_DID=did:key:your_issuer_did

# --- Meilisearch (Full-Text Search) ---
MEILISEARCH_HOST=http://localhost:7700

# --- Sentry (Error Monitoring) ---
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# --- Redis ---
REDIS_URL=redis://localhost:6379

# --- Multi-Tenant Defaults ---
DEFAULT_TENANT_ID=dakkah
DEFAULT_COMMISSION_PERCENT=15
DEFAULT_TRIAL_DAYS=14
DEFAULT_PAYMENT_TERMS=net30
SEEDED_GOV_AUTHORITY_ID=your_seeded_gov_authority_uuid

# --- Vendor Settings ---
VENDOR_INACTIVE_WARNING_DAYS=30
VENDOR_INACTIVE_DEACTIVATE_DAYS=90

# --- Booking Settings ---
BOOKING_CANCEL_NOTICE_HOURS=24
BOOKING_CHECKIN_WINDOW=30
BOOKING_NOSHOW_GRACE=15

# --- Finance Settings ---
INVOICE_DUE_DAYS=30
QUOTE_EXPIRY_DAYS=14
GRACE_PERIOD_DAYS=7
MAX_PAYMENT_RETRIES=3

# --- Local Development URLs (optional, for local docker-compose setups) ---
MEDUSA_BACKEND_URL_LOCAL=http://localhost:9000
STOREFRONT_URL_LOCAL=http://localhost:5000
ERPNEXT_URL_LOCAL=http://localhost:8080
FLEETBASE_URL_LOCAL=http://localhost:8000
PAYLOAD_CMS_URL_LOCAL=http://localhost:3001
WALTID_URL_LOCAL=http://localhost:7000

# --- Replit-Specific (only needed in Replit environment) ---
# __MEDUSA_ADDITIONAL_ALLOWED_HOSTS=.replit.dev,.replit.app
# BACKEND_URL=https://your-repl.replit.dev
# STORE_URL=https://your-repl.replit.dev
