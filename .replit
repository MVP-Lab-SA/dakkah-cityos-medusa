modules = ["web", "nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
STORE_CORS = "http://localhost:5000,https://*.replit.dev,https://*.replit.app,*"
ADMIN_CORS = "http://localhost:5000,http://localhost:9000,https://*.replit.dev,https://*.replit.app,*"
AUTH_CORS = "http://localhost:5000,http://localhost:9000,https://*.replit.dev,https://*.replit.app,*"
VITE_MEDUSA_BACKEND_URL = "http://localhost:9000"
TEMPORAL_ENDPOINT = "ap-northeast-1.aws.api.temporal.io:7233"
TEMPORAL_NAMESPACE = "quickstart-dakkah-cityos.djvai"
__MEDUSA_ADDITIONAL_ALLOWED_HOSTS = ".replit.dev,.replit.app"

[userenv.development]
MEDUSA_BACKEND_PORT = "9000"
STOREFRONT_PORT = "5000"
MEDUSA_ADMIN_PATH = "/commerce/admin"
BACKEND_URL = "http://localhost:9000"
STORE_URL = "http://localhost:5000"
NODE_ENV = "development"
LOG_LEVEL = "info"
PAYLOAD_CMS_URL = "http://localhost:3001"
ERPNEXT_URL = "http://localhost:8080"
FLEETBASE_URL = "http://localhost:4000"
WALTID_URL = "http://localhost:7000"

[userenv.production]
PAYLOAD_CMS_URL = "https://cms.dakkah.com"
ERPNEXT_URL = "https://erp.dakkah.com"
FLEETBASE_URL = "https://fleet.dakkah.com"
WALTID_URL = "https://identity.dakkah.com"
BACKEND_URL = "https://api.dakkah.com"
STORE_URL = "https://dakkah.com"
NODE_ENV = "production"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 9000
externalPort = 9000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash /home/runner/workspace/start.sh"
waitForPort = 5000

[deployment]
deploymentTarget = "vm"
run = ["bash", "/home/runner/workspace/start.sh"]
build = ["bash", "-c", "echo 'No build step needed'"]
